<jp.pmw.test_en_revolution.drawer.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/drawer_lecture_confirm_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkGray">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_medium"
            android:textColor="@color/floralWhite"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2014年12月10日 (3時限)" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_medium"
            android:textColor="@color/floralWhite"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1号館 1315"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/floralWhite"
            android:textSize="@dimen/textsize_medium"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="赤羽根" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/floralWhite"
            android:textSize="@dimen/textsize_medium"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="学習指導の技術【看護】(WEEK 14)" />
        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/drawer_chapger_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="@drawable/separator"
            android:textSize="@dimen/textsize_large"
            android:textColor="@color/dimgray"
            android:text="Small Text"
            android:id="@+id/chapter_textView" />
     </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/drawer_section_layout">
        <RelativeLayout
            android:layout_width="652dp"
            android:layout_height="72dp" >

            <!-- Icon -->
            <ImageView
                android:id="@+id/item_icon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="24dp"
                android:src="@drawable/ic_launcher" />

            <!-- Item Text -->
            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/textsize_large"
                android:layout_toRightOf="@+id/item_icon"
                android:gravity="center_vertical"
                android:minHeight="?android:attr/listPreferredItemHeightSmall"
                android:text="item"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />

            <!-- Counter -->
            <TextView
                android:id="@+id/item_counter"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </RelativeLayout>
    </LinearLayout>
</jp.pmw.test_en_revolution.drawer.DrawerLayout>
