<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- ボタンが押されてない時 -->
    <item android:state_pressed="false">
        <!-- ボタンの形状 -->
        <shape android:shape="rectangle">
            <!-- ボタンの色 -->
            <solid android:color="@color/gray"/>
            <!-- ボタンの枠線 -->
            <stroke android:width="1dp" android:color="#fffdfdfd"/>
            <!-- ボタンの角の半径 -->
            <corners android:radius="96dp"/>
            <!-- ボタン内の余白 -->
            <padding android:top="48dp" android:left="48dp" android:bottom="48dp" android:right="48dp"/>
        </shape>
    </item>
    <!-- ボタンが押された時 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/skyBlue"/>
            <stroke android:width="3dp" android:color="@color/dimGray"/>
            <corners android:radius="96dp"/>
            <padding android:top="48dp" android:left="48dp" android:bottom="48dp" android:right="48dp"/>
        </shape>
    </item>
</selector>